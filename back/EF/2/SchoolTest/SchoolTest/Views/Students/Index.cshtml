@model IEnumerable<School.Models.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "_layout";
}

<h1>Students</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
@*            <th>
                @Html.DisplayNameFor(model => model.StudentsCourses)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
@*                <td>
                    @foreach (var stdCurs in item.StudentsCourses)
                    {
                        @Html.DisplayFor(modelItem => stdCurs.Course.Name )
                    }
                </td>*@
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ID">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
